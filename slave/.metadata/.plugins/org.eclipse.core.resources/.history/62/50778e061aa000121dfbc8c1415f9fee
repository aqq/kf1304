void get_ip_by_name_test() {
	string ip;
	(new slaver())->get_ip_by_name("www.114.com", ip);
	assert(ip=="208.87.35.103");
}

void lookup_ip_test() {
	slaver *worker = new slaver();
	string ip;
	worker->lookup_ip("www.114.com", ip);
	cout << "ip:" << ip << endl;
	worker->lookup_ip("www.114.com", ip);
	cout << "ip:" << ip << endl;
}
